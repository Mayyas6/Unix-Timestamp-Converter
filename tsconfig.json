{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@pages/*": ["tests/playwright/ui/page-objects/*"],
      "@utils/*": ["tests/utils/*"]
    }
  },
  "include": ["tests/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
